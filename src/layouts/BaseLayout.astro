---
import BaseHead from "../components/Head.astro"
import GlobalStyles from "../components/globalStyles.astro";
type Props = {
   tabName: string 
}
const {tabName} = Astro.props
---
<html lang="en">

    <GlobalStyles />
    <BaseHead title={tabName} />
    <body class="font-sans text-stone-900 antialiased selection:bg-yellow-400 selection:text-stone-900">
        <main class="relative z-10 mb-5 mt-12 sm:mx-2 md:mx-0 grid grid-cols-[1fr,min(640px,100%),1fr] xl:gap-x-10 gap-y-5  px-7 sm:mt-12 sm:px-0 xl:grid-cols-[1fr,minmax(auto,240px),min(640px,100%),minmax(auto,240px),1fr] [&>*]:col-start-2 xl:[&>*]:col-start-3">
            <slot />
            <footer>Thanks for being here!</footer>
        </main>
    </body>
</html>